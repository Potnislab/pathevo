#Qiime2 Docs:
#https://docs.qiime2.org/2023.5/


#Import your .fna file

#qiime_import.sh

#!/bin/bash

qiime tools import \
  --input-path AL65.fna \
  --output-path AL65.qza \
  --type 'FeatureData[AlignedSequence]'
  
  
#Exclude the blacklisted reads

#exclude_AL65.sh

#!/bin/bash

qiime quality-control exclude-seqs \
  --i-query-sequences AL65.qza \
  --i-reference-sequences blklist_db_97.qza \
  --p-method blast \
  --p-perc-identity 0.97 \
  --p-perc-query-aligned 0.97 \
  --o-sequence-hits blklist_hits_AL65.qza \
  --o-sequence-misses blklist_cleaned_AL65.qza
  
  
#Export the blacklist cleaned file

#export.sh

#!/bin/bash

qiime tools export \
  --input-path blklist_cleaned_AL65.qza \
  --output-path blklist_cleaned_AL65
